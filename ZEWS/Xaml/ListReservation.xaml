<Page x:Class="ZEWS.Xaml.ListReservation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZEWS.Xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListReservation" Background="White">

    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Bahnschrift Condensed" FontSize="24" Margin="0 20 0 0">Список бронирований</TextBlock>
        <DataGrid ItemsSource="{Binding}" AutoGenerateColumns="False" FontFamily="Bahnschrift Condensed" FontSize="18" IsReadOnly="True" CanUserAddRows="False" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,138,0,0" Width="600" Height="200">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="ФИО пользователя" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button Content="{Binding User.GetFIO}" Click="EditUser_Click" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" Tag="{Binding User.id}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Дата входа" Binding="{Binding Entry}" Width="*" />
                <DataGridTextColumn Header="Дата выхода" Binding="{Binding Exit}" Width="*" />
                <DataGridTextColumn Header="Номер комнаты" Binding="{Binding Room.Name}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Height="50" Width="100" VerticalAlignment="Top"  BorderBrush="Black" HorizontalAlignment="Right" Margin="0,10,50,0" Content="Назад" FontFamily="Bahnschrift Condensed" FontSize="18" Click="BackButton_Click"></Button>
    </Grid>

</Page>
